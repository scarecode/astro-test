---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import NoteCard from '../../components/NoteCard.astro';
import SearchBar from '../../components/SearchBar.astro';
import TagFilter from '../../components/TagFilter.astro';

const allNotes = await getCollection('notes');
const sortedNotes = allNotes.sort((a, b) => 
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

const allTags = allNotes.flatMap((note) => note.data.tags);
---

<BaseLayout title="All Notes - Knowledge Base" description="Browse all notes in the knowledge base">
  <div class="notes-page">
    <section class="page-header">
      <div class="container">
        <h1 class="page-title">All Notes</h1>
        <p class="page-description">
          Explore all {allNotes.length} notes in the knowledge base
        </p>
      </div>
    </section>

    <section class="filters-section">
      <div class="container">
        <div class="filters-wrapper">
          <SearchBar />
          <TagFilter tags={allTags} />
        </div>
      </div>
    </section>

    <section class="notes-section">
      <div class="container">
        <div class="notes-grid" id="all-notes-grid">
          {sortedNotes.map((note) => (
            <NoteCard note={note} />
          ))}
        </div>
        <div id="no-results" class="no-results" style="display: none;">
          <p>No notes found matching your search criteria.</p>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<script>
  // Store all notes data for client-side filtering
  const allNotesData = [
    ...document.querySelectorAll('.note-card')
  ].map((card) => {
    const cardElement = card as HTMLElement;
    const link = cardElement.querySelector('a') as HTMLAnchorElement | null;
    const title = cardElement.querySelector('.card-title')?.textContent || '';
    const description = cardElement.querySelector('.card-description')?.textContent || '';
    const tags = Array.from(cardElement.querySelectorAll('.tag')).map((tag) => tag.textContent || '');
    return {
      element: cardElement,
      title: title.toLowerCase(),
      description: description.toLowerCase(),
      tags,
      href: link?.href || '',
    };
  });

  // Handle search
  window.addEventListener('search', ((e: CustomEvent) => {
    const query = e.detail.query;
    filterNotes(query, '');
  }) as EventListener);

  // Handle tag filter
  window.addEventListener('filter', ((e: CustomEvent) => {
    const tag = e.detail.tag;
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const query = searchInput?.value.toLowerCase() || '';
    filterNotes(query, tag);
  }) as EventListener);

  function filterNotes(query: string, selectedTag: string) {
    const grid = document.getElementById('all-notes-grid');
    const noResults = document.getElementById('no-results');
    if (!grid || !noResults) return;

    let visibleCount = 0;

    allNotesData.forEach((note) => {
      const matchesSearch = !query || 
        note.title.includes(query) || 
        note.description.includes(query) ||
        note.tags.some((tag) => tag.toLowerCase().includes(query));
      
      const matchesTag = !selectedTag || note.tags.includes(selectedTag);

      if (matchesSearch && matchesTag) {
        note.element.style.display = '';
        visibleCount++;
      } else {
        note.element.style.display = 'none';
      }
    });

    // Show/hide no results message
    if (visibleCount === 0) {
      noResults.style.display = 'block';
      grid.style.display = 'none';
    } else {
      noResults.style.display = 'none';
      grid.style.display = 'grid';
    }
  }
</script>

<style>
  .notes-page {
    width: 100%;
  }

  .page-header {
    background: var(--color-surface);
    padding: 3rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .filters-section {
    padding: 2rem 0;
    background: var(--color-bg);
  }

  .filters-wrapper {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .notes-section {
    padding: 3rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .notes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .no-results {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--color-text-muted);
  }

  .no-results p {
    font-size: 1.125rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 2rem 0;
    }

    .page-title {
      font-size: 2rem;
    }

    .filters-section {
      padding: 1.5rem 0;
    }

    .notes-section {
      padding: 2rem 0;
    }

    .notes-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
