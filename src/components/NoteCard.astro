---
import type { CollectionEntry } from 'astro:content';

interface Props {
  note: CollectionEntry<'notes'>;
}

const { note } = Astro.props;
const { title, description, tags, publishDate } = note.data;
const formattedDate = new Date(publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="note-card">
  <a href={`/notes/${note.slug}`} class="card-link">
    <div class="card-content">
      <h2 class="card-title">{title}</h2>
      <p class="card-description">{description}</p>
      <div class="card-meta">
        <time class="card-date" datetime={publishDate.toISOString()}>
          {formattedDate}
        </time>
        <div class="card-tags">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
    </div>
  </a>
</article>

<style>
  .note-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
  }

  .note-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
    border-color: var(--color-primary);
  }

  .card-link {
    display: block;
    width: 100%;
    text-decoration: none;
    color: inherit;
  }

  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    height: 100%;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    line-height: 1.3;
  }

  .card-description {
    color: var(--color-text-muted);
    line-height: 1.6;
    flex: 1;
    margin: 0;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .card-date {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .card-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-primary-light);
    color: var(--color-primary);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .card-content {
      padding: 1.25rem;
    }

    .card-title {
      font-size: 1.25rem;
    }

    .card-meta {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
